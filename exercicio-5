import java.util.Scanner;
class Main {
  public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    double valor;
    double litro;
    double resultado;
    System.out.println("Informe o valor em real que deseja abastecer: ");
    valor = sc.nextDouble();

    System.out.println("Informe o preço por litro do combustivel: ");
    litro = sc.nextDouble();

    resultado = valor * litro;

    System.out.printf("O total a se pagar é %.2f %n: ", (resultado));
    
  }
}
